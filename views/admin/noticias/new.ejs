    <h1 class="header-titulo">Cadastrar nova notícia</h1>
    <form method="POST" action="/admin/noticias">
        <div class="form-group">
            <label>Título</label>
            <input type="text" class="form-control" name="noticia[titulo]"> 
        </div>
        <div class="form-group">
            <label>Corpo da notícia:</label>
            <textarea name="noticia[mensagem]" id="summernote"></textarea>
        </div>
        <button class="btn btn-danger btn-lg">Cadastrar</button>       
    </form>
    
